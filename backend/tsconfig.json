{
  "compilerOptions": {
    "module": "NodeNext",
    "target": "ES2020",
    "rootDir": "./src",
    "moduleResolution": "NodeNext",
    "baseUrl": "src",
    "outDir": "./dist",
    "sourceMap": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "checkJs": true,
    "allowImportingTsExtensions": true,  // Enable importing .ts extensions
    "emitDeclarationOnly": true,
    "declaration": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
